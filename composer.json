{
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "10up/wp_mock": "dev-master",
        "antecedent/patchwork": "*",
        "wordpress": "*",
        "satooshi/php-coveralls": "dev-master",
        "squizlabs/php_codesniffer": "2.*"
    },
    "extra": {
        "installer-paths": {
            "vendor/{$name}/": [
                "wordpress"
            ]
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "http://wpackagist.org"
        },
        {
            "type": "package",
            "package": {
                "name": "wordpress",
                "version": "4.1",
                "type": "wordpress-plugin",
                "dist": {
                    "url": "http://wordpress.org/wordpress-4.1.zip",
                    "type": "zip"
                }
            }
        }
    ],

    "minimum-stability": "stable",
    "config": {
        "bin-dir": "bin/"
    }
}
